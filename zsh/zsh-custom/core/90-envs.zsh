export PATH="$HOME/.local/bin:/usr/local/bin:$PATH"

# cdable vars, based on default xdg user directories, should also works on macOS
# Purposal: use ~/.config/user-dirs.dirs if possible?
documents="$HOME/Documents"
doc="$documents"
downloads="$HOME/Downloads"
dl="$downloads"
music="$HOME/Music"
mus="$music"
pictures="$HOME/Pictures"
pic="$pictures"
videos="$HOME/Videos"  # NOTE: no "~/Videos" for macOS by default, although I prefer "Videos"

# misc cdable vars, mainly based on personal habits
projects="$HOME/Projects"
proj="$projects"
miscellaneous="$HOME/Miscellaneous"
misc="$miscellaneous"
src="$HOME/src"
